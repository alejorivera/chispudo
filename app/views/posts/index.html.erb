      <p>Este sería más o menos del largo de un tweet o un poquito menos.</p>
    </div>
  </div>
</section>



<section id="proyects">
  <div class="container">
<span class="centered">
  <%= link_to 'New Post', new_post_path, class: "button button-primary" %>
</span>
<br><br>
<div class="row">
<h3 style="margin-bottom: 30px;"><strong>Proyectos exitosos (5+ Chispudos apuntados)</strong></h3>
<table class="table">
  <% for post in @success_posts %>
    <tr valign="top">
          <td>
            <%= link_to image_tag('up-arrow.png'), vote_up_path(post), :remote => true %>
          </td>
          <td>
           <%= link_to image_tag('down-arrow.png'), vote_down_path(post), :remote => true %>
          </td>
          <td>
            <strong><%= link_to post.title, post_path(post) %></strong>
            <span id="post-<%= post.id %>" class="vote-count"> <%= post.vote_count %></span>
             votos <br>  publicado <%= time_ago_in_words post.created_at %> ago.
          </td>
          <td>
            <%= link_to "Unirse al equipo", team_assignments_path(post_id: post.id), method: "post", class: "button button-primary" %>
          </td>
    </tr>
  <% end %>
</table>

    <hr>

<h3><strong>Proyectos Prometedores</strong></h3>
<table class="table">
  <% for post in @other_posts %>
    <tr valign="top">
          <td>
            <%= link_to image_tag('up-arrow.png'), vote_up_path(post), :remote => true %>
          </td>
          <td>
           <%= link_to image_tag('down-arrow.png'), vote_down_path(post), :remote => true %>
          </td>
          <td>
            <strong><%= link_to post.title, post_path(post) %></strong>
            <span id="post-<%= post.id %>" class="vote-count"> <%= post.vote_count %></span>
             votos <br>  publicado <%= time_ago_in_words post.created_at %> ago.
          </td>
          <td>
            <%= link_to "Unirse al equipo", team_assignments_path(post_id: post.id), method: "post", class: "button button-primary" %>
          </td>
    </tr>
  <% end %>
</table>

</div> <!-- end row -->


    <%= will_paginate @other_posts %>
  </div>
</section>
