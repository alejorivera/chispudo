<h1><%= @header_text %></h1>

<%= link_to "Hot", { action: 'index', order: 'hot' } %>
<%= link_to "New", { action: 'index', order: 'new' } %>
<%= link_to 'New Post', new_post_path %>

<table>
  <% for post in @posts %>
    <tr valign="top">
      <div class='post-<%= post.id %>' >
          <td>
            <%= link_to "Vote Up", vote_up_path(post), :remote => true %>
          </td>
          <td>
           <%= link_to "Vote Down", vote_down_path(post), :remote => true %>
          </td>
          <td>
            <strong><%= link_to post.title, post_path(post) %></strong>
            <span id="post<%= post.id.to_s %>"> <%= post.vote_count %></span>
            points posted <%= time_ago_in_words post.created_at %>
          </td>
      </div> <!-- end post.id -->
    </tr>
  <% end %>
</table>

<%= will_paginate @posts %>

