/* ==========================================================================
   Junto Studios's custom styles
   ========================================================================== */

/* OVERALL ASPECT */

body, html { height: 100%; width: 100%; font-size: 16px; }

body {
  	background-color: #f2f2f2;
    letter-spacing: -0.02rem;
    font-weight: 100;
    font-size: 16px;
    color: #555;
    font-family: "Open Sans", sans-serif;

    -webkit-font-smoothing: antialiased;
    -webkit-overflow-scrolling: touch;
}

/*spacing*/

section {
    padding: 60px 0px 90px;
}

.centered {
    text-align: center;
}

.right {
    text-align: right;
}

.left {
    text-align: left;
}

.maxwidth {
    max-width: 900px;
}

.nopadding {
   padding: 0 !important;
   margin: 0 !important;
}


/* Titles */
h1 {
    font-family: "Open Sans", sans-serif;
    letter-spacing: 0.1rem;
    color: #2a3239;
    font-weight: 800;
    text-transform: uppercase;
    font-size: 3rem;
    margin: 20px 0px;
}

h2 {
    font-size: 1.5rem;
    color: #2a3239;
    text-align: center;
    line-height: 2.5rem;
}

h2.title {
    margin-bottom: 50px;
}

h3 {
    font-weight: 300;
    font-size: 1.4rem;
    color: #2a3239;
    margin: 0px;
}

/* Paragraph & Typographic */
p {
    font-family: "Open Sans", sans-serif;
    line-height: normal;
    font-size: 1.2rem;
    color: #2a3239;
}


/* Links */
a {
    color: #2a3239;
    word-wrap: break-word;

    -webkit-transition: opacity 0.3s;
    -moz-transition: opacity 0.3s;
    -o-transition: opacity 0.3s;
    transition: opacity 0.3s;
}

a:hover,
a:focus {
    color: #2a3239;
    outline: 0;
    opacity: 0.7;
    text-decoration: none;
}

a:before,
a:after {
    -webkit-transition: color 0.1s ease-in, background 0.1s ease-in;
    -moz-transition: color 0.1s ease-in, background 0.1s ease-in;
    -ms-transition: color 0.1s ease-in, background 0.1s ease-in;
    -o-transition: color 0.1s ease-in, background 0.1s ease-in;
    transition: color 0.1s ease-in, background 0.1s ease-in;
}

 hr {
    display: block;
    height: 1px;
    border: 0;
    border-top: 1px solid #ccc;
    margin: 0px 0px 60px 0px;
    padding: 0;
}

.row {
    margin: 0px;  
}

.border {
    border-top: solid 1px #a0afbb;
}

/*ELEMENTS: IMAGES*/

.logo {
    max-height: 100px;
    margin: 0 auto 40px;
}

.green-arrow {
    margin-top: 40px;
    height: 50px;

}

.white-arrow {
    margin-top: -15px;
    margin-left: 10px;
    height: 50px;
}

.dark-arrow {
    height: 50px;
}

// Animations

.visible {
    opacity: 1;
}

// BUTTONS

.button {
    text-transform: uppercase;
    border: solid 2px transparent;
    font-weight: 600;
    border-radius: 3px;
    padding-left: 25px;
    padding-right: 25px;
    -webkit-transition: background-color 0.2s ease-in;
    -moz-transition: background-color 0.2s ease-in;
    -o-transition: background-color 0.2s ease-in;
    -ms-transition: background-color 0.2s ease-in;
    transition: background-color 0.2s ease-in;
    white-space: nowrap;
}

.button-primary {
    width:100%;
    padding:10px;
    background: transparent;
}

.button-primary:hover {
    background:#6aa89b;
    color:#fff;
    opacity: 0.9;
}

.button-white {
    padding:10px 25px;
    background-color: rgba(255,255,255,0.5);
    color: #fff;
}

.button-white:hover {
    background-color: rgba(0,0,0,0.35);    
    color:#fff;
    opacity: 0.9;
}

/*END ELEMENTS*/


